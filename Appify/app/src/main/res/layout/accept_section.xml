<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
             android:layout_height="match_parent">
    <!-- Header with logo, title, and profile icon -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="412dp"
        android:layout_height="155dp"
        android:background="#0F4C81"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Logo Image -->
        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_logo" />

        <!-- App Title Text -->
        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="APPIFY"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Profile Icon -->
        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_profile" />

        <TextView
            android:id="@+id/footer_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:padding="16dp"
            android:text="IMPORTANT: Registering for this event requires geolocation."
            android:textColor="#000000"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Navigation Bar -->
    <!-- Placeholder until I add the actual buttons -->
    <TextView
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_layout"
        android:background="#377D9C"
        android:gravity="center"
        android:padding="8dp"
        android:text="Events | Facilities | Organize ðŸ””"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/header_layout"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="412dp"
        android:layout_height="52dp"
        android:text="Notifications"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="112dp" />

    <!-- Home Button -->

    <Button
        android:id="@+id/home_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/notifications_layout"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FFFF00"
        android:padding="16dp"
        android:text="Home"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/header_layout"
        app:layout_constraintVertical_bias="0.721" />

    <LinearLayout
        android:id="@+id/notifications_layout"
        android:layout_width="412dp"
        android:layout_height="300dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="164dp"></LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>