<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        layout="@layout/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/header">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_list_item"
            android:backgroundTint="@color/navbar"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">
                <TextView
                    android:id="@+id/event_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:text="Event Name"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:padding="10dp"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_list_item"
                    android:backgroundTint="#FFFFFF"
                    android:layout_margin="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">
                        <TextView
                            android:id="@+id/registration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:text="Registration Ends:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:id="@+id/registration_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="MMM, DD, YYYY"
                            android:textSize="14sp"
                            android:layout_gravity="center"
                            android:paddingBottom="10dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/event"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:text="Event Date: "
                            android:textSize="14sp"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/event_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="MMM DD, YYYY"
                            android:textSize="14sp"
                            android:layout_gravity="center"
                            android:paddingBottom="10dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/facility"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:text="Facility: "
                            android:textSize="14sp"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/facility_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Facility Name"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:textSize="14sp"
                            android:layout_gravity="center"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_list_item"
                    android:backgroundTint="#FFFFFF"
                    android:layout_margin="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Description"
                            android:paddingTop="10dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:id="@+id/event_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="15dp"
                            android:paddingBottom="15dp"
                            android:paddingEnd="15dp"
                            android:text="Event Description"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </FrameLayout>
                <TextView
                    android:id="@+id/geolocationText"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="IMPORTANT: GEOLOCATION STATUS"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </FrameLayout>
        <Button
            android:id="@+id/enlist_leave_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="Enlist"
            android:textColor="@color/black"
            app:backgroundTint="@color/buttons"
            app:strokeColor="@color/buttons_stroke"
            app:strokeWidth="1dp"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="412dp"
            android:layout_height="109dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/decline_invite_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="Decline"
                android:textColor="@color/black"
                app:backgroundTint="@color/buttons"
                app:strokeColor="@color/buttons_stroke"
                app:strokeWidth="1dp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/accept_invite_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:text="Accept"
                android:textColor="@color/black"
                app:backgroundTint="@color/buttons"
                app:strokeColor="@color/buttons_stroke"
                app:strokeWidth="1dp"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>