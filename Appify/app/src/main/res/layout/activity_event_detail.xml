<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Event Name -->
            <TextView
                android:id="@+id/textViewName"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="32dp"
                android:gravity="center_horizontal"
                android:text="Event X"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <!-- Registration Date and Event Date -->

            <!-- Facility -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/registration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:text="Registration Ends:"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textViewRegistrationEndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="X"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/date_break"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="|"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/event_date_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:text="Event Date:"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textViewDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginStart="32dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="32dp">

                <TextView
                    android:id="@+id/facility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Facility: "
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textViewFacility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXX"
                    android:layout_marginStart="5dp"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Max Waitlist and Max Sample -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/max_waitlist_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/textViewMaxWaitEntrants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/sample_break"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/max_sample_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/textViewMaxSampleEntrants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Geo-location -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginStart="32dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/geolocation_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/textViewGeolocate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Event description here..."
                android:textSize="14sp"
                android:paddingTop="8dp" />
        <ImageView
            android:id="@+id/qr_code"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:contentDescription="@string/qr_code_image"/>



            <TextView
                android:id="@+id/posterImageHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Poster image"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingBottom="4dp"
                android:gravity="center_horizontal" />

            <ImageView
                android:id="@+id/imageViewPoster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true" />


            <!-- Edit Event and Organizer Actions Buttons in Horizontal Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/buttonEditEvent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Edit Event"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/buttons"
                    app:strokeColor="#FF8C00"
                    app:strokeWidth="1dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/organizerActions"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Organizer Actions"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/buttons"
                    app:strokeColor="#FF8C00"
                    app:strokeWidth="1dp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Notifications Header -->
            <TextView
                android:id="@+id/notificationsHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Notifications"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:paddingBottom="4dp" />

            <!-- Notifications Buttons in a 2x2 Grid with Grey Background and Black Border -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:columnCount="2"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:padding="8dp"
                android:layout_gravity="center"
                android:background="@drawable/border_black">

                <!-- Notify Waitlisted Button -->
                <Button
                    android:id="@+id/buttonWaitlisted"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="Notify Waitlisted"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/buttons"
                    app:strokeColor="#FF8C00"
                    app:strokeWidth="1dp" />

                <!-- Notify Enrolled Button -->
                <Button
                    android:id="@+id/buttonEnrolled"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="Notify Enrolled"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/buttons"
                    app:strokeColor="#FF8C00"
                    app:strokeWidth="1dp" />

                <!-- Notify Cancelled Button -->
                <Button
                    android:id="@+id/buttonCancelled"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="Notify Cancelled"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/buttons"
                    app:strokeColor="#FF8C00"
                    app:strokeWidth="1dp" />

                <!-- Notify Invited Button -->
                <Button
                    android:id="@+id/buttonInvited"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="Notify Invited"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/buttons"
                    app:strokeColor="#FF8C00"
                    app:strokeWidth="1dp" />
            </GridLayout>

            <!-- Navigation Buttons Section for Back to Events and View Entrants -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/buttonBackToEvents"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Back to Events"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/buttons"
                    app:strokeColor="#FF8C00"
                    app:strokeWidth="1dp" />

                <Button
                    android:id="@+id/entrant_list_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="View Entrants"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/buttons"
                    app:strokeColor="#FF8C00"
                    app:strokeWidth="1dp" />
            </LinearLayout>



        </LinearLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>