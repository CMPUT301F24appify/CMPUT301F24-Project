<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <EditText
        android:id="@+id/editTextEventName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Event Name" />

    <EditText
        android:id="@+id/editDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date: MMM DD, YYYY" />

    <EditText
        android:id="@+id/editFacility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Facility" />

    <EditText
        android:id="@+id/editRegistrationEndDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Reg End Date: MMM DD, YYYY" />

    <EditText
        android:id="@+id/editTextEventDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Event Description" />

    <!-- CheckBox or Button for Geolocation -->
    <!-- If you intended to change this to a Button, update it accordingly -->
    <CheckBox
        android:id="@+id/checkGeolocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Geo-Location" />

    <TextView
        android:id="@+id/posterLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Poster file:" />

    <Button
        android:id="@+id/buttonUploadPoster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:backgroundTint="@color/buttons"
        app:strokeColor="#FF8C00"
        app:strokeWidth="1dp"
        android:text="Upload Poster" />

    <EditText
        android:id="@+id/maxNumberWaitList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Max Entrants For WaitList:"
        android:inputType="number" />

    <EditText
        android:id="@+id/maxNumberSample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Max Entrants For Sample:"
        android:inputType="number" />

